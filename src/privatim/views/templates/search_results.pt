<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:tal="http://xml.zope.org/namespaces/tal"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <tal:block metal:fill-slot="content">
        <div class="container mt-4">
            <h1 i18n:translate="">Search Results</h1>
            <tal:block tal:repeat="result search_results">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title" tal:content="result.title">Title</h5>
                        <p class="card-text" tal:content="result.description">Description</p>
                        <a tal:attributes="href result.url" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </tal:block>
        </div>
    </tal:block>
</metal:block>
