<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:tal="http://xml.zope.org/namespaces/tal"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <tal:block metal:fill-slot="content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 i18n:translate="">Search Results</h1>
                </div>
            </div>

            <div class="row">
                <!-- Main content area (2/3 width) -->
                <div class="col-md-8 order-md-1">

                    <!-- Displaying a search result -->
                    <div tal:repeat="result activities" class="mt-4">
                        <div class="card d-flex flex-row activity-card-wrapper">
                            <div class="card-body col-md-8 d-flex flex-column">
                                <h5 class="card-title fw-bold" i18n:translate="">${result.title}</h5>
                                <div tal:repeat="item result.headlines.items()" class="search-result-headline">
                                    <strong>${item[0]}:</strong>
                                    <span tal:content="structure item[1]"></span>
                                </div>
                                <a href="${request.route_url(result.type.lower(), id=result.id)}" i18n:translate="" class="details-link" tal:condition="result.type != 'Comment'">Show Details</a>
                            </div>
                        </div>
                    </div>


                </div>

                <!-- Sidebar (1/3 width) -->
                <!-- Note: hidden until we decide to implement it -->
                <div class="col-md-4 order-md-2 mt-5" style="display: none;">
                    <!-- ... (sidebar content remains unchanged) ... -->
                </div>

            </div>
        </div>
    </tal:block>
</metal:block>
