<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">

        <h1 i18n:translate>List of Persons</h1>

        <p tal:condition="not:people" i18n:translate="">No people added yet.</p>

        <table class="table align-middle mb-0 rounded-table" tal:condition="people">
            <thead class="bg-light">
                <tr>
                    <th class="col-7" i18n:translate="">Name</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="person people">
                    <td tal:condition="person.first_name and person.last_name">
                        <a href="${request.route_url('person', id=person.id)}" class="mb-1">${person.first_name} ${person.last_name}</a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</metal:block>
