<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">

        <div class="row mb-3">
            <div class="col-md-6">
                <h1 class="mb-3">Sitzung ${meeting.name}</h1>
            </div>

            <!-- Dropdown button with common actions  -->
            <div class="col-md-6 text-end">
                    ${panel('action_menu')}
            </div>

            <!-- Main Content -->
            <div class="col-lg-9 mb-4">
                <div class="text-start resource-collection">
                    <p>
                        <span class="fw-bold" i18n:translate="">Date / Time:</span> ${time}
                    </p>
                    ${meeting_attendees}
                </div>
            </div>

            <div class="col-lg-9 mb-4">

                <h2 i18n:translate="">Agenda Items</h2>

                <input type="hidden" name="csrf_token" value="${layout.csrf_token()}"/>
                <div class="accordion" id="agenda-items" data-sortable="" data-sortable-url="${sortable_url}">
                        <div data-sortable-id="${item.position}" class="accordion-item handle-for-dragging draggable-item" tal:repeat="item agenda_items">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed agenda-item-accordion dimmed-white-background" type="button" data-bs-toggle="collapse" data-bs-target="#item-${item.id}" aria-expanded="false" aria-controls="item-${item.id}" >
                                    <span class="accordion-text-9">${item.title}</span>
                                    ${item.edit_btn()}
                                    <i class="fas fa-arrows-alt-v"></i>
                                </button>
                        </h2>
                        <div id="item-${item.id}" class="accordion-collapse collapse" data-bs-parent="#agenda-items">
                            <div class="accordion-body dimmed-white-background">
                                <p class="make-line-breaks-in-p">${item.description}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a i18n:translate="" href="${request.route_url('add_agenda_item', id=meeting.id)}"
                                         class="btn btn-primary" role="button" tabindex="1">Add Agenda Item</a>
                </div>

            </div>

        </div>
    </div>
</metal:block>
