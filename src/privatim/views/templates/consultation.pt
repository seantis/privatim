<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">
        <div class="container py-5">
            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-9 mb-4">

                    <div class="col-12">
                        <h1 class="mb-4">${consultation.title}</h1>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p tal:condition="consultation.description">
                                <span class="fw-bold">Description:</span> ${consultation.description}
                            </p>
                            <p tal:condition="consultation.comments">
                                <span class="fw-bold">Comments:</span> ${consultation.comments}
                            </p>
                            <p tal:condition="consultation.recommendation">
                                <span class="fw-bold">Recommendation:</span> ${consultation.recommendation}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Sidebar for documents and status, starts below the title -->
                <div class="col-lg-3">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 i18n:translate="" class="card-title">Documents</h5>
                            <ul class="list-group list-group-flush" tal:condition="documents">
                                <li tal:repeat="item documents" class="list-group-item">
                                    <a href="${item.download_url}" class="stretched-link text-decoration-none document-link" target="_blank">
                                        <i class="fas" tal:condition="python:'pdf' in item.document.content_type" class="fa-file-pdf"></i>
                                        <i class="fas" tal:condition="python:'pdf' not in item.document.content_type" class="fa-file"></i>
                                            ${item.document.filename}
                                    </a>
                                    <span class="badge bg-secondary float-end">${item.document.content_type}</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 i18n:translate="" class="card-title">Tags</h5>
                            <p class="card-text" tal:condition="consultation.status">
                                <span class="badge rounded-pill bg-info text-dark">${consultation.status.name}</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</metal:block>
