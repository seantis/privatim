<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">

        <div class="row mb-3">
            <div class="col-md-8">
                <h1 class="mb-3">${consultation.title}</h1>
            </div>

            <!-- Dropdown button with common actions  -->
            <div class="col-md-4 text-end">
                    ${panel('action_menu')}
            </div>
        </div>

        <!-- Main Content -->
        <div class="row mt-4 mb-4">
            <div class="col-lg-8 card mb-4 consultation-body">
                <div class="row consultation-main-text">
                    <p tal:condition="consultation.description" class="consultation-text-paragraph make-line-breaks-in-p">
                        <span class="fw-bold" i18n:translate="">Description:</span> ${consultation.description}
                    </p>
                    <p tal:condition="consultation.recommendation"  class="consultation-text-paragraph make-line-breaks-in-p">
                        <span class="fw-bold" i18n:translate="">Recommendation:</span> ${consultation.recommendation}
                    </p>
                    <p tal:condition="consultation.evaluation_result"
                            class="consultation-text-paragraph make-line-breaks-in-p">
                        <span class="fw-bold" i18n:translate="">Evaluation Result:</span> ${consultation.evaluation_result}
                    </p>
                    <p tal:condition="consultation.decision"
                            class="consultation-text-paragraph make-line-breaks-in-p">
                        <span class="fw-bold" i18n:translate="">Decision:</span> ${consultation.decision}
                    </p>
                </div>

                <tal:b tal:condition="flattened_comments_tree">
                    <div class="row">
                        <div class="comment-container">
                            <div class=mt-5></div>
                            <metal:block use-macro="layout.macros['display_comments']"
                                     tal:define="flattened_comments_tree flattened_comments_tree">
                            </metal:block>

                        </div>
                    </div>
                </tal:b>

                <div class="row consultation-main-text">
                    <div class="comment-container">
                        <h2 i18n:translate="" class="mt-4">Add Comment</h2>
                        <metal:block use-macro="layout.macros['add_comment_form']"
                                 tal:define="add_comment_route_name request.route_url('add_comment', id=consultation.id,
                                        _query={'target_url': 'consultation',
                                                'parent_id': 'root'});
                                        form consultation_comment_form">
                        </metal:block>
                    </div>
                </div>


            </div>

        </div>
        <!-- Sidebar for documents and status, starts below the title -->
        <div class="col-lg-4">
            <div class="card mb-4" tal:condition="documents">
                <div class="card-body claude-element">
                    <h5 i18n:translate="" class="card-title">Documents</h5>
                    <ul class="list-group list-group-flush">
                        <li tal:repeat="item documents" class="list-group-item">
                            <a href="${item.download_url}"
                               class="text-decoration-none document-link" target="_blank">
                                    <span class="icon-container">
                                        <i tal:condition="python:'pdf' in item.doc_content_type"
                                                class="fas fa-file-pdf"></i>
                                        <i tal:condition="python:'pdf' not in item.doc_content_type"
                                                class="fas fa-file"></i>
                                            ${item.display_filename}
                                    </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card mb-4 ms4 ">
                <div class="card-body claude-element">
                    <h5 i18n:translate="" class="card-title">Status</h5>
                    <h4 class="card-text" tal:condition="consultation.status">
                        <span class="badge rounded-pill bg-secondary text-light">${consultation.status.name}</span>
                    </h4>
                </div>
            </div>
            <div class="card">
                <div class="card-body claude-element">
                    <h5 i18n:translate="" class="card-title">Tags</h5>
                    <ul class="list-group list-group-flush">
                        <li tal:repeat="tag consultation.secondary_tags" class="list-group-item">
                            <h4 class="card-text">
                                <span class="badge rounded-pill bg-secondary text-light">${tag.name}</span>
                            </h4>
                        </li>
                    </ul>
                </div>
            </div>
        </div>


    </div>
</metal:block>
