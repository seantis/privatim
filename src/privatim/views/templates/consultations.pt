<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:tal="http://xml.zope.org/namespaces/tal"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <tal:block metal:fill-slot="content">
        <div class="container">
            <div class="row">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 i18n:translate="">Activities</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        <a i18n:translate="" href="${request.route_url('add_consultation')}"
                                             class="btn btn-primary" role="button" tabindex="1">Add Consultation</a>
                    </div>
                </div>

                <!-- Main content area (2/3 width) -->
                <div class="col-md-8">
                    <div tal:repeat="consultation consultations" class="mt-5">

                        <div class="card d-flex flex-row">
                            <div class="profile-section">
                                <img src="${layout.static_url('privatim:static/default_profile_icon.png')}"
                                     class="rounded-circle m-3 profile-icon" alt="Profile Icon">
                                <p class="profile-name" i18n:translate="">Max Müller</p>
                            </div>
                            <div class="row m-3">
                                <div class="card-body col-md-">
                                    <h5 class="card-title fw-bold" i18n:translate="">${consultation.title}</h5>
                                    <p class="card-text" i18n:translate="">${consultation.description[:100] + '...' if len(consultation.description) > 100 else consultation.description}</p>
                                    <p class="card-text" i18n:translate="">${consultation.comments}</p>
                                    <p class="card-text" i18n:translate="">${consultation.recommendation}</p>
                                    <a href="${request.route_url('consultation', id=consultation.id)}" i18n:translate=""
                                       class="details-link">-> Details Anzeigen</a>
                                </div>
                                <div class="col-md-4 mt-4 tag-buttons">
                                    <div class="d-flex flex-row align-items-start">
                                        <button class="btn btn-secondary rounded-pill mb-2 me-2 tag-button">Tag1
                                        </button>
                                        <button class="btn btn-secondary rounded-pill mb-2 me-2 tag-button">Tag2
                                        </button>
                                    </div>
                                    <div class="d-flex flex-column align-items-start">
                                        <div class="d-flex flex-row">
                                            <p>
                                                <strong i18n:translate="">Status:</strong>
                                                <span i18n:translate="">${consultation.status.name}</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Sidebar (1/3 width) -->
                <div class="col-md-4 mt-5">
                    <div class="mb-5 p-3">
                        <label for="kantonDropdown" class="form-label">Kanton</label>
                        <select class="form-select" id="kantonDropdown">
                            <option selected>Choose...</option>
                            <option value="1">Zürich</option>
                            <option value="2">Geneva</option>
                            <option value="3">Vaud</option>
                            <!-- Add other options here -->
                        </select>
                    </div>
                    <div class="mb-3 p-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="beratungCheck">
                            <label class="form-check-label" for="beratungCheck">
                                Beratung
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="gesetzgebungCheck">
                            <label class="form-check-label" for="gesetzgebungCheck">
                                Gesetzgebung
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="vorabkontrollenCheck">
                            <label class="form-check-label" for="vorabkontrollenCheck">
                                Vorabkontrollen
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </tal:block>
</metal:block>
