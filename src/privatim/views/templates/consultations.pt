<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:tal="http://xml.zope.org/namespaces/tal"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <tal:block metal:fill-slot="content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 i18n:translate="">${title}</h1>
                </div>

                <tal:b tal:condition="show_add_button">
                    <div class="col-md-6 text-end">
                        <a i18n:translate="" href="${request.route_url('add_consultation')}"
                                             class="btn btn-primary" role="button" tabindex="1">Add Consultation</a>
                    </div>
                </tal:b>
            </div>

            <!-- Separates the main content from the Navbar-->
            <div class="row gx-5 mt-4">
                <!-- Main content area (2/3 width) -->
                <div class="consultations-content-width order-md-1">
                    <div tal:repeat="consultation consultations" class="mt-4">
                        <a href="${request.route_url('consultation', id=consultation._id)}" class="content-link text-decoration-none">
                            <div class="d-flex flex-row activity-card-wrapper">
                                <div class="profile-section m-3">
                                    <img tal:condition="consultation.creator_pic_id"
                                            src="${request.route_url('download_file', id=consultation.creator_pic_id)}"
                                            class="rounded-circle m-3 profile-icon" alt="Profile Icon">
                                    <img tal:condition="not consultation.creator_pic_id"
                                            src="${layout.static_url('privatim:static/default_profile_icon.png')}"
                                            class="rounded-circle m-3 profile-icon" alt="Profile Icon">

                                    <div>
                                        <tal:define define="has_creator python: consultation.creator is not None">
                                            <tal:condition condition="consultation.has_creator">
                                                <p class="profile-name" i18n:translate="">${consultation.fullname}</p>
                                            </tal:condition>
                                            <tal:condition condition="not:consultation.has_creator">
                                                <p class="profile-name"
                                                   style="max-width: 150px; visibility: hidden;" i18n:translate="">
                                                    Unknown Creator</p>
                                            </tal:condition>
                                        </tal:define>
                                        <p class="text-secondary">${layout.format_date(consultation.created, 'date')}  ${layout.format_date(consultation.created, 'time')}</p>
                                    </div>
                                </div>

                                <div class="card-body col-md-8 d-flex flex-column">
                                    <h5 class="card-title fw-bold" i18n:translate="">${consultation.title}</h5>
                                    <p class="card-text" tal:condition="consultation.description" tal:content="consultation.description if len(consultation.description) < 550 else consultation.description[:550] + '...'"></p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </tal:block>
</metal:block>
