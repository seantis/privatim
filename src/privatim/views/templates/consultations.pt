<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:tal="http://xml.zope.org/namespaces/tal"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

<tal:block metal:fill-slot="content">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <h1 i18n:translate>Activities</h1>
                </div>
                <div class="col-md-6 text-end">
                    <a href="" class="btn btn-primary" role="button" i18n:translate>Add Consultation</a>
                </div>
            </div>
            <div tal:repeat="consultation consultations">
                <div class="row align-items-center">

                    <div class="col-md-2 text-center">
                        <img src="path_to_profile_image" class="rounded-circle" alt="Profile Image" width="50" height="50">
<!--                         <p class="mt-2" tal:content="${consultation.person.name}">Name</p> -->
                    </div>

<!--                     <div class="col-md-10"> -->
<!--                         <p tal:content="consultation.text">Text goes here...</p> -->
<!--                     </div> -->

                </div>
            </div>
        </div>
    </div>
</tal:block>

</metal:block>
