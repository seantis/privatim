<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">

        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 id="main-title" i18n:translate="">Working Groups</h1>
            </div>
            <div class="col-md-6 text-end">
                <a i18n:translate="" href="${request.route_url('add_working_group')}" class="btn btn-primary" role="button"
                   tabindex="1">Add Working Group</a>
            </div>
        </div>

        <div class="table-responsive pt-3">

            <table class="table align-middle mb-0 rounded-table">
                <thead class="bg-light">
                <tr>
                    <th class="col-7" i18n:translate="">Committee</th>
                    <th class="col-2" i18n:translate="">People</th>
                </tr>
                </thead>

                <tbody>
                <tr tal:repeat="group working_groups">
                    <td>
                        <a href="${request.route_url('meetings', id=group.id)}" class="mb-1">${group.name}</a>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">


                            <tal:b tal:repeat="user group.users">
                                <img style="width: 45px; height: 45px"
                                     src="${user.picture.id and request.route_url('download_file', id=user.picture.id) or layout.static_url('privatim:static/default_profile_icon.png')}"
                                     class="rounded-circle me-2"
                                     title="${user.fullname}">
                            </tal:b>

                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

</metal:block>
