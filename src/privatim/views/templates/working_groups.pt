<metal:block use-macro="main_template"
             xmlns="http://www.w3.org/1999/xhtml"
             xmlns:metal="http://xml.zope.org/namespaces/metal"
         i18n:domain="privatim">

    <div metal:fill-slot="content">

        <div class="row mb-4">
            <div class="col-md-6">
                <h1 i18n:translate="">Working Groups</h1>
            </div>
            <div class="col-md-6 text-end">
                <a i18n:translate="" href="${request.route_url('add_working_group')}" class="btn btn-primary" role="button"
                   tabindex="1">Add Working Group</a>
            </div>
        </div>

        <div class="table-responsive">

            <table class="table align-middle mb-0 ">
                <thead class="bg-light">
                <tr>
                    <th class="col-7" i18n:translate="">Committee</th>
                    <th class="col-2" i18n:translate="">People</th>
                </tr>
                </thead>

                <tbody>
                <tr tal:repeat="group working_groups">
                    <td>
                        <a href="${request.route_url('meetings', id=group.id)}" class="mb-1">${group.name}</a>
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="${layout.static_url('privatim:static/default_profile_icon.png')}" tal:repeat="user group.users"
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle me-2"
                                 title="${user.first_name}"/>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

</metal:block>
