<header i18n:domain="privatim" class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
            <a class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none"
               href="${request.route_url('home')}">
                <img src="${layout.static_url('privatim:static/logo-dark-font-transparent.png')}" alt="Logo" class="bi me-4"
                     width="242" height="87">
            </a>

            <tal:block tal:condition="request.authenticated_userid">

                <ul class="d-flex nav col-12 col-lg-auto mb-2">
                    <li>
                        <a href="${request.route_url('activities')}"
                           class="nav-link px-3 link-body-emphasis"
                           id="${'active_tab' if request.matched_route.name == 'activities' else ''}"
                                 i18n:translate>Activities</a>
                    </li>
                    <li>
                        <a href="${request.route_url('people')}"
                           class="nav-link px-3 link-body-emphasis"
                           id="${'active_tab' if request.matched_route.name == 'people' else ''}"
                                 i18n:translate>People</a>
                    </li>
                    <li>
                        <a href="${request.route_url('consultations')}"
                           class="nav-link px-3 link-body-emphasis"
                           id="${'active_tab' if request.matched_route.name == 'consultations' else ''}"
                                 i18n:translate>Consultations</a>
                    </li>
                    <li>
                        <a href="${request.route_url('working_groups')}"
                           class="nav-link px-3 link-body-emphasis"
                           id="${'active_tab' if 'working_group' in request.matched_route.name else ''}"
                                 i18n:translate>Working Groups</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                        <input type="search" disabled="disabled" class="form-control" placeholder="Search..." aria-label="Search" i18n:attributes="placeholder">
                    </form>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="${layout.static_url('privatim:static/default_profile_icon.png')}" alt="mdo" width="40" height="40"
                                 class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu text-small">

<!--?                            Uncomment once we have Settings or other -->
<!--?                            <li><a class="dropdown-item" href="#" i18n:translate>Settings</a></li>-->
<!--?                            <li><a class="dropdown-item" href="#" i18n:translate>Profile</a></li>-->
<!--?                            <li><hr class="dropdown-divider"></li>-->
                            <li><a class="dropdown-item" href="${request.route_url('logout')}" i18n:translate>Sign out</a></li>
                        </ul>
                    </div>
               </div>
            </tal:block>
        </div>
    </div>
</header>
